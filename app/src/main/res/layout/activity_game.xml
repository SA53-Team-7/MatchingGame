<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">


    <TextView
        android:id="@+id/gameHead"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="Get ready....."
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textGameProgress"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1" />/>


    <TextView
        android:id="@+id/textGameProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="0 out of 6 Matches"
        android:textSize="25sp"
        android:paddingLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/gameHead"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.05"/>

    <TextView
        android:id="@+id/textGameTimer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="0:00:00"
        android:textSize="25sp"
        android:paddingRight="5dp"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@id/gameHead"
        app:layout_constraintLeft_toRightOf="@id/textGameProgress"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.05"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textGameProgress"
        app:layout_constraintWidth_percent="0.33"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintLeft_toRightOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@id/textGameProgress"
        app:layout_constraintWidth_percent="0.33"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintLeft_toRightOf="@id/img2"
        app:layout_constraintTop_toBottomOf="@id/textGameTimer"
        app:layout_constraintWidth_percent="0.33"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintLeft_toRightOf="@id/img4"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/img3"
        app:layout_constraintLeft_toRightOf="@id/img5"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/img4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/img5"
        app:layout_constraintLeft_toRightOf="@id/img7"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/img6"
        app:layout_constraintLeft_toRightOf="@id/img8"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/img7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/img8"
        app:layout_constraintLeft_toRightOf="@id/img10"
        app:srcCompat="@drawable/question_mark" />

    <ImageView
        android:id="@+id/img12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.185"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/img9"
        app:layout_constraintLeft_toRightOf="@id/img11"
        app:srcCompat="@drawable/question_mark" />

    <Button
        android:id="@+id/testSkip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Test Skip"
        app:layout_constraintTop_toBottomOf="@id/img11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>